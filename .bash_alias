#!/bin/bash

# git
alias g='git'
alias gg='ls | xargs -t -I{} git -C {} $@'

# Docker
alias d='docker'
alias dm='docker-machine'
alias dcp='docker-compose'
alias di='docker images'
alias dl='docker ps -l -q'
alias dp='docker ps'
alias dpa='docker ps -a'
alias dpq='docker ps -a -q'
alias drm='docker rm'
alias drmi='docker rmi'
alias dpc='docker rm $(docker ps -a -q -f status=exited)'
alias dic='docker rmi $(docker images -q -f dangling=true)'
# deprecated
alias drma='docker rm $(docker ps -a -q -f status=exited)'

# Terminal
alias ll='ls -lrt'
alias la='ls -lrta'
alias ld='ll | grep ^d'

alias h='history'

alias ..='cd ..'
alias ...='cd ../..'
